name: Docker Compose Deploy

on:
  push:
    branches:
      - main  # Cambiar por el nombre de tu rama principal si es diferente

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout c칩digo
        uses: actions/checkout@v2

      - name: Set up Docker Compose
        run: |
          sudo rm /usr/local/bin/docker-compose  # Eliminar versi칩n anterior, si existe
          sudo curl -L "https://github.com/docker/compose/releases/download/1.29.2/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose  # Descargar Docker Compose 1.29.2
          sudo chmod +x /usr/local/bin/docker-compose  # Dar permisos de ejecuci칩n a Docker Compose

      - name: Loguearse en GitHub Packages
        uses: docker/login-action@v2
        with:
          username: ${{ github.actor }}
          password: ${{ secrets.GITHUB_TOKEN }}

      - name: Build y levantar servicios con Docker Compose
        run: |
          docker-compose up -d --build
        working-directory: ./path/to/your/docker-compose-directory  # Reemplazar por la ruta donde est치 tu docker-compose.yml

